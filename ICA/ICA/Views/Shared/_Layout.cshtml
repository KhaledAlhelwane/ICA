    <style>
        .navbar-brand {
            font-weight: 700;
            font-size: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
            line-height: 1;
        }

        .navbar-brand {
            display: inline-block;
            padding-top: 0.3125rem;
            padding-bottom: 0.3125rem;
            margin-right: 1rem;
            font-size: 1.25rem;
            line-height: inherit;
            white-space: nowrap;
        }
        .logo-container {
            display: flex;
            align-items: center;
        }

        .text-container {
            display: flex;
            flex-direction: column;
            margin-left: 10px; /* adjust the margin as needed */
        }

        .first-sentence {
            margin: 0;
        }

        .second-sentence {
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @{
                    string urlcontroller = string.Empty;
                    string urlaction = string.Empty;
                    if (User.IsInRole("Driver"))
                    {
                        urlcontroller = "Driver";
                        urlaction = "index";
                    }
                else
                {
                        urlcontroller = "User";
                        urlaction = "Account";
                }
                }
                <a class="navbar-brand" asp-area="" asp-controller="@urlcontroller" asp-action="@urlaction">
                    <div class="logo-container">
                        <img src="~/desighn/logo-modified-min.png" width="70" height="70" />
                        <div class="text-container m-2">
                            الجمعية الخيرية الإسلامية
                            <small class="second-sentence mr-3" style="font-size:40%;font-family: 'Didot', serif;letter-spacing: 1px;">Islamic Charity Association</small>

                        </div>
                        </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
