                            </li>
                        }
                        @if (User.IsInRole("IT") || User.IsInRole("Media"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="articles" asp-action="Index">Articles</a>
                            </li>
                        }*@
                    </ul>
                    <partial name="_LoginPartial" />
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" dir="rtl" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Islamic Charity Association @*- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
