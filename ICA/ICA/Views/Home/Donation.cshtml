@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Donation"];
    ViewData["meta"] = localizer["Support Islamic charity associations dedicated to providing humanitarian aid to those in need regardless of their political, religious, or sectarian affiliations. Help us achieve our vision of a compassionate society and contribute to the growth and progress of the community through our various projects and initiatives. Donate now to provide material and moral support, vocational training, and educational and psychological assistance to affected families and displaced individuals."];
    Layout = "_MainLayout";
    ViewData["type"] = "website";
    ViewData["Image"] = "https://icangoh.org/desighn/logo-modified-min.png";
}
@{
    string direction = "";
    if (CultureInfo.CurrentCulture.Name.StartsWith("ar")) { direction = "rtl"; }
    else { direction = "ltr"; }
}

<img src="/images/donation.webp" class="img-fluid" alt="Donation">
