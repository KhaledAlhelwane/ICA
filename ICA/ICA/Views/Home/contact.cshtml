@using System.Globalization;


@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@model ICA.ViewModel.ContatctViewModel
@{
    Layout = "_MainLayout";
    ViewData["meta"] = localizer["Contact the Islamic Charity Association to learn more about our mission, upcoming events, and how you can get involved. Our contact page features a convenient email form that allows you to send a message directly to our team. Whether you're interested in volunteering, donating, or just have a question, we're here to help. Send us a message today and join us in making a positive impact in the lives of those in need."];
    ViewData["Title"] = "Contact";
    ViewData["Url"] = Context.Request.GetDisplayUrl();
    ViewData["Image"] = "https://icangoh.org/desighn/logo-modified-min.png";
    ViewData["type"] = "website";
}
@{
    string direction = "";
    if (CultureInfo.CurrentCulture.Name.StartsWith("ar")) { direction = "rtl"; }
    else { direction = "ltr"; }
}
<div class="hero-wrap" style="background-image: url('/images/mainbg.webp'); background-position: 50% 225px;" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-7 ftco-animate text-center fadeInUp ftco-animated" data-scrollax=" properties: { translateY: '70%' }" style="transform: translateZ(0px) translateY(50%);">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }" style="opacity: 0; transform: translateZ(0px) translateY(21.4286%);"><span class="mr-2"><a asp-action="Index">Home</a></span> <span>Contact</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }" style="opacity: 0; transform: translateZ(0px) translateY(21.4286%);">Contact Us</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row d-flex mb-5 contact-info" dir="@direction">
            <div class="col-md-12 mb-4">
                <h2 class="h4">@localizer["Contact Information"]</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-4">
                <p><span>@localizer["Address:"] </span> <a href="https://maps.app.goo.gl/Gx7tPfCh76bxhYgj8">@localizer["Al-Maytam Street, Al-Waer neighborhood, Homs, Syria"]</a></p>
            </div>
            <div class="col-md-4">
                <p><span>@localizer["Phones:"]</span> <a>2513358 | 2513353 | 2513359 </a></p>
            </div>
            <div class="col-md-4">
                <p><span>@localizer["Email:"]</span> <a href="mailto:info@icangoh.org">info@icangoh.org</a></p>
            </div>
            @*<div class="col-md-3">
                <p><span>Website</span> <a href="https://icangoh.org/">icangoh.org</a></p>
            </div>*@
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 pr-md-5 ">
                <h4 class="mb-4" dir="@direction">@localizer["Do you have any questions?"]</h4>
                @{if (ViewBag.successed != null)
                {
                    <div class="alert alert-success" role="alert">
                            <h4 dir="@direction">@localizer["The email has sent successfully, we will answer your question very soon"]</h4>
                        </div>
                       
                }
                else if (ViewBag.Notsuccessed != null)
                {
                    <div class="alert alert-danger" role="alert">
                            <h4 dir="@direction">@localizer["Somthing went wrong, please try again!"]</h4>

                        </div>
                }
                }
                <form asp-controller="Home" asp-action="contact" method="post" dir="@direction">
                    <div class="form-group">
                        <input required type="text" asp-for="Name" class="form-control" placeholder="@localizer["Your Name"]">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input required type="text" asp-for="Email" class="form-control" placeholder="@localizer["Your Email"]">

                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input required type="text" asp-for="Subject" class="form-control" placeholder="@localizer["Subject"]">
                        <span asp-validation-for="Subject" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <textarea required asp-for="Message" cols="30" rows="7" class="form-control" placeholder="@localizer["Message"]"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="@localizer["Send Message"]" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
@*
            <div class="col-md-6" id="map"></div>*@
        </div>
    </div>
</section>
