@using Microsoft.AspNetCore.Identity;
@model ICA.ViewModel.DriverViewModel
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label[for]:after {
        content: " *";
        color: red;
    }
</style>
<h1>اضافة مهمة </h1>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form id="myform" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"> إسم السائق</label>
                <input  readonly asp-for="FullName" class="form-control" value="@UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.SecoundName" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>



            <br>
            <div class="form-group">
                <label asp-for="Source" class="control-label">مكان الإنطلاق</label>
                <input  asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>  <br>
            <div class="form-group">
                <label asp-for="Des" class="control-label">الوجهة</label>
                <input   asp-for="Des" class="form-control" />
                <span asp-validation-for="Des" class="text-danger"></span>
            </div>  <br>
            <div class="form-group">
                <label asp-for="TIME" class="control-label">تاريخ المهمة</label>
                <input  type="date" asp-for="TIME" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="TIME" class="text-danger"></span>
            </div>  <br>
           @* <div class="form-group">
                <label asp-for="Check" class="control-label"></label>
                <input asp-for="Check" class="form-control" />
                <span asp-validation-for="Check" class="text-danger"></span>
            </div>*@

            <label class="control-label" asp-for="Photo1File">صورة العداد عند الانطلاق</label>

            <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" accept="image/*" asp-for="Photo1File"
                   onchange="document.getElementById('pp').src=window.URL.createObjectURL(this.files[0])" data-bs-browse="إختر صورة" />
            <span asp-validation-for="Photo1File" class="text-danger"></span>

            <div class="text-center">
                <img id="pp" alt="profile" src="~/PorfilesPictures/ProfilePicture.png" class="img-thumbnail text-center" width="300" height="300" />

            </div>
            <br> <div class="form-group">
                <label asp-for="DigitSurce" class="control-label"> رقم العداد عند الذهاب</label>
                <input id="DigitSurce" asp-for="DigitSurce" class="form-control" placeholder="ادخل رقم العداد" />
                <span asp-validation-for="DigitSurce" class="text-danger"></span>
            </div>
            <br>
            <label class="control-label" asp-for="Photo2File">صورة العداد عند الإياب</label>
            <input  type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" accept="image/*" asp-for="Photo2File"
                   onchange="document.getElementById('pp2').src=window.URL.createObjectURL(this.files[0])" />
            <span asp-validation-for="Photo2File" class="text-danger"></span>
            <div class="text-center">
                <img id="pp2" alt="profile" src="~/PorfilesPictures/ProfilePicture.png" class="img-thumbnail" width="300" height="300" />

            </div>
            <br>  <div class="form-group">
                <label asp-for="DigitDes" class="control-label">رقم العداد عند الإياب </label>
                <input id="DigitDes" asp-for="DigitDes" class="form-control" placeholder="ادخل رقم العداد" />
                <span asp-validation-for="DigitDes" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group d-flex justify-content-center">
                <button type="button" onclick="validate();" class="btn btn-primary Mybutton"><i class="bi bi-plus-circle"></i> إضافة المهمة </button>
            </div>
        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-return-right"></i> العودة الى القائمة</a>
</div>

<script>
    function validate(){
        const num1DS = parseInt(document.getElementById("DigitSurce").value);
        const num2DD = parseInt(document.getElementById("DigitDes").value);
        if (num1DS > num2DD) {
           
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text:'انتبه,عداد الإنطلاق أكبر من عداد الإياب',
               
            })
        }
        else{
            document.getElementById("myform").submit();
        }
    }
</script>