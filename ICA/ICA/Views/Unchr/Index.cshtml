@model IEnumerable<ICA.Models.Bus>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DigitSurce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DigitDes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Des)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Check)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DigitSurce)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DigitDes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Des)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TIME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Check)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
