@model IEnumerable<ICA.Models.Assosiation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>إدارة أقسام الجمعية</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> إنشاء قسم جديد</a>
</p>
<hr/>
<table class="table">
    <thead>
        <tr>
            <th>
                <h4>الرابط التشعبي</h4>
            </th>
            <th>
              
                <h4> إسم القسم بالعربي</h4>
            </th>
            <th>
               
                <h4>إسم القسم بالانجليزي</h4>
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssosiationURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullNameEnglish)
            </td>

            
            <td>
                    <a class="btn btn-danger" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> تعديل</a>

              @*  <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a class="btn btn-secondary" asp-controller="User" asp-action="Account">العودة للصفحة الرئيسية</a>
</div>