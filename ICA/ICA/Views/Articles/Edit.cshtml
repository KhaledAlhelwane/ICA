@model ICA.ViewModel.ArticleViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-success"><q>@Model.TitleArabic</q></h1>

<h2><i class="bi bi-pencil-square"></i> تعديل</h2>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
<div class="row MyContainer">
    <div class="col-md-8">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="TypeOfArticles" class="control-label">نوع المقال</label>
                <select dir="rtl" class="form-select" asp-for="TypeOfArticles" aria-label="Default select example">
                   <option value="خبر">خبر</option>
                    <option value="حدث">حدث</option>
                    <option value="مقال للمدونة">مقال للمدونة</option>
                   
                </select>
                <span asp-validation-for="TypeOfArticles" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="thenameassoc" class="control-label">المصدر</label>
                <select asp-for="thenameassoc" class="form-control" asp-items="@(new SelectList(Model.AssosiationList, "Id", "FullName"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="TitleArabic" class="control-label">العنوان</label>
                <input asp-for="TitleArabic" class="form-control" />
                <span asp-validation-for="TitleArabic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentArabic" class="control-label">المحتوى</label> <i class="bi bi-exclamation-circle-fill text-primary" data-bs-toggle="popover" title="ملاحظة" data-bs-content="الرجاء تحميل صورة واحد على الأكثر داخل محتوى المقال وتحميل الصور في ألبوم الصور"></i>
                 <textarea id="summernote" asp-for="ContentArabic"></textarea>
                <span asp-validation-for="ContentArabic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePuplished" class="control-label">تاريخ النشر</label>
                <input asp-for="DatePuplished" class="form-control" />
                <span asp-validation-for="DatePuplished" class="text-danger"></span>
            </div>
          @*  <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>*@
            <div class="form-group">
                <label asp-for="TitleEnglish" class="control-label"></label>
                <input asp-for="TitleEnglish" class="form-control" />
                <span asp-validation-for="TitleEnglish" class="text-danger"></span>
            </div>
            <div class="form-group" dir="ltr">
                <label asp-for="ContentEnglish" class="control-label"></label> <i class="bi bi-exclamation-circle-fill text-primary" data-bs-toggle="popover" title="ملاحظة" data-bs-content="الرجاء تحميل صورة واحد على الأكثر داخل محتوى المقال وتحميل الصور في ألبوم الصور"></i>
                <textarea id="summernote2" asp-for="ContentEnglish"></textarea>
                <span asp-validation-for="ContentEnglish" class="text-danger"></span>
            </div>
           
          
            </div>
             <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ContentEnglish" class="control-label">صورة الغلاف</label>
                <input type="file" class="form-control" asp-for="ProfilePictureFile"
                       id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" accept="image/*"
                       onchange="document.getElementById('pp').src=window.URL.createObjectURL(this.files[0])" />
                <input hidden  class="form-control-file" asp-for="ProfilePicture"/>
            </div>
              @if (Model.ProfilePicture != null)
            {
                <img id="pp" alt="image profile" class="img-thumbnail"  src="~/PorfilesPictures/@Model.ProfilePicture" />
            }
            else
            {
                <img id="pp" alt="profile" src="~/PorfilesPictures/ProfilePicture.png" class="img-thumbnail"  />
            }
          
    </div>
        <div class="form-group">
            <button type="button" onclick="Validatoin();" class="btn btn-primary Mybutton m-2"> حفظ <i class="bi bi-check2-circle"></i></button>
            <button hidden type="submit" id="submitbutton" class="btn btn-primary Mybutton m-2"> حفظ <i class="bi bi-check2-circle"></i></button>

        </div>
</div>
    
</form>
<div>
    <a asp-action="Index" class="btn btn-secondary"> <i class="bi bi-arrow-return-right"></i> العودة</a>
 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function Validatoin() {
        var content1 = document.getElementById("summernote");
        var content2 = document.getElementById("summernote2");
        if (content1.value == '' || content2.value == '') {
            alert("يجب ملء جميع الحقول");

        } else {
            document.getElementById("submitbutton").click();
        }

    }
</script>
